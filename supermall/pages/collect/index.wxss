page {
  background-color: #f3f4f6;
}
.collevt_main {
  background-color: #f3f4f6;
}
.collevt_main .collevt_title {
  padding: 20rpx 0;
}
.collevt_main .collevt_title .collevt_tips {
  margin-left: 25rpx;
  padding: 15rpx;
  border: 1rpx solid #ccc;
  background-color: #fff;
}
.collevt_main .collevt_title .active {
  color: var(--themeColor);
  border-color: currentColor;
}
.collevt_main .collevt_content .goods_item {
  display: flex;
  border-bottom: 5rpx solid #ccc;
  background-color: #fff;
}
.collevt_main .collevt_content .goods_item .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collevt_main .collevt_content .goods_item .goods_img_wrap image {
  width: 70%;
}
.collevt_main .collevt_content .goods_item .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collevt_main .collevt_content .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collevt_main .collevt_content .goods_item .goods_info_wrap .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
