<view class="search_row">
  <input placeholder="请输入你要搜索的商品" bindinput="handleInput" value="{{inpValue}}"/>
  <button hidden="{{!isFocus}}" class="search_but" bindtap="handleCancle">取消</button>
</view>

<view class="search_content">
    <navigator class="search_item"
    wx:for="{{goods}}"
    wx:key="goods_id"
    url="/pages/goods_detail/index?goods_id={{item.goods_id}}"
    >
      {{item.goods_name}}
    </navigator>
</view>
